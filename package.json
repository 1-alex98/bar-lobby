{
  "name": "bar-lobby",
  "version": "0.10.1",
  "private": true,
  "description": "Lobby client for the RTS game Beyond All Reason",
  "author": "Jazcash <jaspercashmore@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beyond-all-reason/bar-lobby.git"
  },
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite",
    "build": "cross-env NODE_OPTIONS='--max-old-space-size=8192' rimraf dist && electron-vite build",
    "compile": "electron-builder --config .electron-builder.config.js",
    "tidy": "npm run lint && npm run format",
    "lint-check": "eslint . --ext .ts,.vue",
    "lint": "eslint . --ext .ts,.vue --fix",
    "format-check": "prettier --check src/**/*.{ts,vue,scss,json}",
    "format": "prettier --write src/**/*.{ts,vue,scss,json}",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild -f -w yourmodule",
    "test": "npm run test:main && npm run test:preload && npm run test:renderer && npm run test:e2e",
    "test:e2e": "npm run build && vitest run",
    "test:main": "vitest run -r packages/main --passWithNoTests",
    "test:renderer": "vitest run -r packages/renderer --passWithNoTests",
    "preversion": "npm run lint-check && npm run format-check",
    "postversion": "git push && git push --tags",
    "typecheck": "npm run typecheck:main && npm run typecheck:renderer",
    "typecheck:main": "tsc -p tsconfig.node.json",
    "typecheck:renderer": "tsc -p tsconfig.web.json"
  },
  "debug": {
    "env": {
      "VITE_DEV_SERVER_URL": "http://127.0.0.1:3344"
    }
  },
  "dependencies": {
    "@iconify-icons/mdi": "^1.2.14",
    "@iconify/json": "^1.1.420",
    "@iconify/vue": "^3.2.1",
    "@sinclair/typebox": "^0.23.5",
    "@vueuse/core": "^9.2.0",
    "ajv": "^8.7.1",
    "axios": "^0.24.0",
    "bar-db": "^6.3.0",
    "better-sqlite3": "^7.6.2",
    "date-fns": "^2.29.1",
    "env-paths": "^3.0.0",
    "flag-icons": "^6.1.1",
    "glob-promise": "^4.2.2",
    "howler": "^2.2.3",
    "jaz-ts-utils": "^5.0.2",
    "kysely": "^0.21.6",
    "luaparse": "^0.3.1",
    "node-7z": "^3.0.0",
    "node-self": "^1.0.1",
    "octokit": "^1.7.1",
    "primeicons": "^6.0.1",
    "primevue": "^3.16.2",
    "sdfz-demo-parser": "^5.4.1",
    "spring-map-parser": "^6.0.2",
    "sqlite": "^4.1.1",
    "sqlite3": "^5.0.8",
    "steamworks.js": "0.0.21",
    "tachyon-client": "^6.0.3",
    "vue-i18n": "^9.2.2",
    "vue3-markdown-it": "^1.0.9",
    "vue3-popper": "^1.4.1"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron-toolkit/utils": "^1.0.2",
    "@types/better-sqlite3": "^7.6.0",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/howler": "^2.2.4",
    "@types/luaparse": "^0.2.8",
    "@types/node-7z": "^2.1.4",
    "@types/uuid": "^8.3.1",
    "@vitejs/plugin-vue": "^3.1.2",
    "@vue/compiler-sfc": "^3.2.29",
    "cross-env": "^7.0.3",
    "date-fns": "^2.29.1",
    "electron": "^18.3.7",
    "electron-builder": "^23.6.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-rebuild": "^3.2.9",
    "electron-unhandled": "^3.0.2",
    "electron-updater": "^4.6.5",
    "electron-vite": "^1.0.11",
    "node-json-db": "^1.6.0",
    "playwright": "^1.27.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "sass": "^1.52.1",
    "tsconfig-paths": "^3.12.0",
    "type-fest": "^2.12.2",
    "typescript": "^4.6.4",
    "unplugin-vue-router": "^0.2.3",
    "uuid": "^8.3.2",
    "vite": "^3.1.8",
    "vite-electron-plugin": "^0.5.1",
    "vite-plugin-electron": "^0.10.3",
    "vite-plugin-electron-renderer": "^0.11.4",
    "vite-plugin-esmodule": "^1.4.4",
    "vitest": "^0.24.3",
    "vue": "^3.2.37",
    "vue-router": "^4.1.6",
    "vue-tsc": "^1.0.9",
    "worker-plugin": "^5.0.1"
  }
}
